include _helpers

doctype
html(lang='ja')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')

    block title
      //-title= concatTitle('-')
      title 渡邉 伸之介
    
    meta(name='keywords', content= joinedKeywords)
    meta(name='description', content= description || site.description)
    meta(name='author', content= site.author)
    
    meta(property='og:type', content='website')
    meta(property='og:url', content= site.url)
    meta(property='og:image', content='')
    meta(property='og:description', content= description || site.description)
    meta(property='og:site_name', content= concatTitle('-'))
        
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='format-detection', content='telephone=no')
    
    //-link(href='/img/icons/', rel='apple-touch-icon-precomposed', sizes='144x144')
    //-link(href='/img/icons/', rel='apple-touch-icon-precomposed', sizes='114x114')
    //-link(href='/img/icons/', rel='apple-touch-icon-precomposed', sizes='72x72')
    
    meta(name='twitter:card', content='summary')
    meta(name='twitter:title', content= concatTitle('-'))
    meta(name='twitter:description', content= description || site.description)
    meta(name='twitter:image:src', content='')
    meta(name='twitter:domain', content='')
    
    //-meta(name='msapplication-TileImage', content='')
    meta(name='msapplication-TileColor', content='#FFFFFF')
    
    link(rel='author', type='txt/plain', href='/humans.txt')
    
    link(href='/css/styles.css?v=' + randStr(), rel='stylesheet')
    link(
      href='http://fonts.googleapis.com/css?family=Muli:300,400',
      rel='stylesheet')
    link(
      href='http://fonts.googleapis.com/css?family=Roboto:300,400,500',
      rel='stylesheet')
    link(
      href='http://fonts.googleapis.com/css?family=Open+Sans:300,400,600',
      rel='stylesheet')
    
    script(src='/js/modernizr.js?v=' + randStr())
    
    |<!--[if lt IE 9]>
    script(src='/js/vendor.ie.js')
    |<![endif]-->

  body(itemscope, itemtype='http://schema.org/WebPage')
    include _google-analytics
    
    #container
      #bg
        .centered
          #vertical-line
      #fg
        header
          #menubar.centered
            #menu
              a(href= htmlPath())
                #home
              #webservices
                a.icon.github(href='https://github.com/shinnn', target='_blank')
                  span Github
                a.icon.twitter(href='https://twitter.com/shinnn_tw', target='_blank')
                  span Twitter
              #tabs
                a(href= htmlPath()) home
                a(href= htmlPath('projects.html')) projects
                a(href= htmlPath('about.html')) about
          .header-line
          nav.centered
            div
              mixin loc-title(first)
                #first-location.intersection
                  a(href= htmlPath('about.html'))
                    span.point
                      #first-point
                    .label= first
                - var _project = getProject(basename);
                #project-title.intersection
                  if _project
                    span.point
                      #project-title-point
                    .label= _project.title
                  else
                    span.point
                      #project-title-point
                    .label
                #project-info.intersection
                  span.point
                    #project-info-point
                  span
                    if !_project
                      span.time
                      span.bar |
                      span.roles
                    else
                      span.time= _project.time
                      span.bar |
                      span.roles= _project.role.join(' / ')
              
              case basename
                when 'index'
                  +loc-title
                when 'about'
                  +loc-title('渡邉伸之介について')
                when 'projects'
                  +loc-title('プロジェクト一覧')
                default
                  +loc-title('プロジェクト一覧')
      
        main
          #content(class= pageClass)
            block inner

        #prev-project-button
        #next-project-button

        footer
          #colophon.columns.centered
            .two-column
              #footer-menu
                div
                  a(href= htmlPath()) Home
                div.separator |
                div
                  a(href= htmlPath('about.html')) About
                div.separator |
                div
                  a(href= htmlPath('projects.html')) Projects
              #contact
                div
                  a(href='https://github.com/shinnn',target='_blank')
                    b shinnn
                    | &nbsp;on Github
                div
                  a(href='https://twitter.com/shinnn_tw',target='_blank')
                    b @shinnn_tw
                    | &nbsp;on Twitter
              #email
                div
                  a(href='mailto:snnskwtnb@gmail.com',target='_blank')
                    | Mail to&nbsp;
                    b snnskwtnb@gmail.com
          
            #license.two-column
              p
                | Copyright &copy; 2013 - #{ new Date().getFullYear() }&nbsp;
                span(itemscope, itemtype='http://schema.org/Person')
                  span(itemprop='name') Shinnosuke Watanabe
              p
                | Unless otherwise stated,&nbsp;
                a(href='https://github.com/shinnn/shinnn.github.io',target='_blank') all source code in this website
                | &nbsp;is licensed under the&nbsp;
                a(href='http://opensource.org/licenses/mit-license.php',target='_blank') MIT license
                | .
    
      block scripts
        include _jquery
      
        if DEBUG
          script(src='/debug/js/vendor.js')
          script(src='/debug/bower_components/benchmark/benchmark.js')
          script(src='/debug/js/main.js')
        else
          script(src='/js/main.js?v=' + randStr())
