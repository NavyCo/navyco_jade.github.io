    meta(name='twitter:card', content='summary')
    meta(name='twitter:title', content= concatTitle('-'))
    meta(name='twitter:description', content= description || site.description)
    meta(name='twitter:image:src', content='')
    meta(name='twitter:domain', content='')
    
    //-meta(name='msapplication-TileImage', content='')
    meta(name='msapplication-TileColor', content='#FFFFFF')
    
    link(href='/css/styles.css', media='screen', rel='stylesheet')
  body
    include _google-analytics
    
    #container
      header
        #menubar
          #menu
            a#home(href='/')
            a(href='/about.html') ABOUT
            a(href='/projects.html') PROJECTS
            
            #webservices
              a.github(href='https://github.com/shinnn',target='_blank')
              a.twitter(href='https://twitter.com/shinnn_tw',target='_blank')
      
      main
        #content
          block inner

      footer
        #colophon.columns
          .two-column
            #footer-menu
              div
                a(href='/') Home
              div.separator |
              div
                a(href='/about.html') About
              div.separator |
              div
                a(href='/projects.html') Projects
            #contact
              div
                a(href='https://github.com/shinnn',target='_blank')
                  b shinnn
                  | &nbsp;on Github
              div
                a(href='https://twitter.com/shinnn_tw',target='_blank')
                  b @shinnn_tw
                  | &nbsp;on Twitter
            #email
              div
                a(href='mailto:snnskwtnb@gmail.com',target='_blank')
                  | Mail to&nbsp;
                  b snnskwtnb@gmail.com
          
          #license.two-column
            p Copyright &copy; 2013 Shinnosuke Watanabe All rights reserved.
